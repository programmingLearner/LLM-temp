import numpy as np

# Set the random seed for reproducibility
np.random.seed(0)

# Define dimensions
n, m = 100, 50  # n = length of x, m = number of rows in W

# Gaussian input vector x
x = np.random.randn(n)

# Gaussian matrix W
W = np.random.randn(m, n)

# Compute y = ReLU(Wx)
y = np.dot(W, x)
y = np.maximum(0, y)  # Applying the ReLU function element-wise

# Find sparsity ratio
sparsity_ratio = (y == 0).sum() / m

print("Sparsity Ratio:", sparsity_ratio)
